@model IEnumerable<FeildenCleggBradley_Studios.Models.ViewModel.Album>

@{
    ViewData["Title"] = "EditAlbums";
}

<h2 class="text-center font-weight-bolder text-dark">View Albums</h2>
@if (Model.Count() > 0)
{
    @foreach (var item in Model)
    {
        <div class="row" id="cover" >
            <div class="col-6" id="cardiv">
                <div id="card" class="card">
                    <h1>@item.Title</h1>
                    <div class="image-crop">
                        <img id="avatar" src="https://drive.google.com/uc?id=1EVA3KUBLxCXF2EGmTf4LUB8F4yAvBrjl"></img>
                    </div>
                    <div id="bio">
                        <p>Hello, my title is @item.Title!</p>
                    </div>
                    <div id="stats">
                        <div>
                            <p class="text-center">Id:@item.Id</p>
                        </div>
                    </div>
                    <div id="buttons">
                        <button id="msg" onclick="edit(event)">Edit</button>
                    </div>
                </div>
            </div>
            <div class="col-6">
                <div class="me" hidden>
                    <div class="container1"  id="hi">
                        <form id="contact" action="" method="post">
                            <h3 class="text-center">Edit Album</h3>
                            <fieldset>
                                <input placeholder="Your Title" type="text" tabindex="1" required autofocus>
                            </fieldset>

                            <fieldset>
                                <button name="submit" type="submit"onclick="update(event)" id="contact-submit" data-submit="">Update</button>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    }
}
else
{
    <p>No record found</p>
}
